{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "checkJs": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
